{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:5173",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Blah-Blah",
    "version": "1.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "dialog": {
        "all": true,
        "open": true
      },
      "fs": {
        "all": true,
        "scope": ["**"]
      },
      "shell": {
        "all": false,
        "sidecar": true,
        "scope": [
          {
            "name": "binaries/whisper",
            "sidecar": true,
            "args": true
          },
          {
            "name": "binaries/ffmpeg",
            "sidecar": true,
            "args": true
          }
        ]
      },
      "path": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "category": "Utility",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.blahblah.subtitles",
      "targets": "all",
      "externalBin": [
        "binaries/ffmpeg",
        "binaries/whisper"
      ],
      "resources": [
        "models/*"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "title": "Blah-Blah",
        "width": 550,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ]
  }
}
